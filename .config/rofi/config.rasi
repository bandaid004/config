configuration {
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

/* Theme */
entry {
    placeholder: "Type here";
}

element {
    orientation: horizontal;
    children: [ element-text, element-icon ];
    spacing: 5px;
}
